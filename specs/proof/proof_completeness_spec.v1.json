{
  "version": "v1",
  "mode": "shadow",
  "default_behavior": "passthrough",
  "default_profile": "passthrough_v1",
  "profiles": {
    "passthrough_v1": {
      "mode": "passthrough"
    },
    "convloss_site_unreachable_v1": {
      "mode": "static",
      "value": "partial"
    },
    "idx_sitemap_missing_v1": {
      "mode": "static",
      "value": "partial"
    },
    "idx_sitemap_missing_rule_v1": {
      "mode": "rule",
      "rules": [
        {
          "when": "inventory.robots_fetch_error == true",
          "value": "partial",
          "because": "robots_fetch_failed"
        },
        {
          "when": "inventory.robots_http_status != 200",
          "value": "partial",
          "because": "robots_non_200"
        },
        {
          "when": "inventory.has_sitemap == false",
          "value": "partial",
          "because": "no_sitemap_detected"
        }
      ],
      "default": {
        "value": "partial",
        "because": "fallback"
      }
    },
    "idx_canonical_missing_v1": {
      "mode": "static",
      "value": "partial"
    },
    "social_twitter_card_missing_v1": {
      "mode": "static",
      "value": "partial"
    },
    "social_no_profiles_detected_v1": {
      "mode": "static",
      "value": "partial"
    },
    "social_og_missing_core_tags_v1": {
      "mode": "static",
      "value": "partial"
    }
  },
  "bindings": {
    "CONVLOSS_SITE_UNREACHABLE": "convloss_site_unreachable_v1",
    "IDX_SITEMAP_MISSING": "idx_sitemap_missing_v1",
    "IDX_CANONICAL_MISSING": "idx_canonical_missing_v1",
    "SOCIAL_TWITTER_CARD_MISSING": "social_twitter_card_missing_v1",
    "SOCIAL_NO_PROFILES_DETECTED": "social_no_profiles_detected_v1",
    "SOCIAL_OG_MISSING_CORE_TAGS": "social_og_missing_core_tags_v1"
  },
  "description": "Shadow-mode spec with profile bindings for proof_completeness."
}
